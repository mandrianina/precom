<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contact</h2>
                <h3 class="section-subheading text-muted">Envoyez-nous un petit message.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form, {'action': path('byd_core_contactmessage'), 'method': 'POST'}) }}
                    {#{ form_start(form, { 'attr': {'id' :'contactForm'}} ) }#}
                    <div class="row">
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_errors(form.nom) }}
                                {{ form_widget(form.nom, { 'attr': {'class' : 'form-control'} }) }}
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email, { 'attr': {'class' : 'form-control'} }) }}
                                <p class="help-block text-danger"></p>
                            </div>   
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_errors(form.message) }}
                                {{ form_widget(form.message, { 'attr': {'class' : 'form-control'}}) }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>        
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                                {{ form_widget(form.envoyer, { 'attr' : { 'class' : 'btn btn-xl'}}) }}
                        </div>
                        {{ form_rest(form)}}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>